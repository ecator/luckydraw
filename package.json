{
  "name": "luckydraw",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "updateVersion": "node scripts/updateVersion.js",
    "createRelease": "tauri build && node scripts/createRelease.js",
    "lint": "eslint . --ext .ts,.vue",
    "lint:fix": "eslint . --ext .ts,.vue --fix",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,vue,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,css}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "archiver": "^7.0.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.30.0",
    "husky": "^9.1.7",
    "marked": "^17.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^7.2.4",
    "vite-plugin-eslint2": "^5.0.0",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.1.10"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "pinia": "^2.3.0",
    "vue": "^3.5.13"
  }
}
